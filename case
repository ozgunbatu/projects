<script>

/* REGION GAP */
new Chart(regionGapChart,{
type:'bar',
data:{
labels:["North","West","South","East","Berlin","Bavaria"],
datasets:[
{label:"Demand",data:[120,160,210,130,190,220]},
{label:"Inventory",data:[180,120,170,160,150,140]}
]
}
});

/* TREND */
new Chart(trendChart,{
type:'line',
data:{
labels:["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug"],
datasets:[{label:"National Demand",data:[100,120,150,190,230,260,280,300]}]
}
});

/* SEASON */
new Chart(seasonChart,{
type:'radar',
data:{
labels:["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug"],
datasets:[{label:"Seasonality Index",data:[0.7,0.8,1.0,1.2,1.4,1.3,1.1,0.9]}]
}
});

/* FORECAST */
new Chart(forecastChart,{
type:'line',
data:{
labels:["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug"],
datasets:[
{label:"Forecast",data:[95,130,155,185,215,255,275,295]},
{label:"Actual",data:[100,120,150,190,230,260,280,300]}
]
}
});

/* SIMULATION */
const simData=[120,160,210,130,190,220];

const simChart=new Chart(simulationChart,{
type:'bar',
data:{
labels:["North","West","South","East","Berlin","Bavaria"],
datasets:[
{label:"Baseline",data:simData},
{label:"After Reallocation",data:simData.map(v=>v*1.1)}
]
}
});

simSlider.oninput=e=>{
const factor=1+e.target.value/100;
simChart.data.datasets[1].data=simData.map(v=>Math.round(v*factor));
simChart.update();
};

</script>

